<Window x:Class="MailSender.Wpf.SendCompleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.Wpf"
        mc:Ignorable="d"
        Title="SendCompleteWindow" Height="175" Width="400" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" BorderThickness="2">
    <Grid>
        <Label x:Name="lblSendComplete" Content="Send Completed" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Foreground="Black"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="133,129,0,0" VerticalAlignment="Top" FontSize="18" Height="28" Width="104" Click="BtnOK_Click"/>

    </Grid>
</Window>
